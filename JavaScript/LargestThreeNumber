function findLargestNumber(num1, num2, num3) {
    let largest = num1;

    if (num2 > largest) {
        largest = num2;
    }

    if (num3 > largest) {
        largest = num3;
    }

    return largest;
}

// Test the function with some examples
const number1 = 10;
const number2 = 20;
const number3 = 15;
console.log("The largest number is: " + findLargestNumber(number1, number2, number3));
